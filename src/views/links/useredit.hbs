<div class="container" >
    <br>
    <br>
    <div class="row" >
        <div class=" text-center">
            <div class="card text-center">
                <div class="card-cody">
                    <div class="col-md-3"></div>
                    <div class="col-md-6" style="background-color: rgb(255, 99, 71, 70%);">
                        <h1 style="color:black">Editar Usuario</h1>
                        <br>
                        <br>
                        <form action="/links/useredit/{{link.id}}" class="form-horizontal text-center border border-light p-5"   method="POST">
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="color: white;"> Nombre</label>
                                <div class="col-sm-6">
                                    <input type="text" style="height:30px" value="{{link.name}}" class="form-control"  name="name" placeholder="Nombre">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="color: white;" >Apellido</label>
                                <div class="col-sm-6">
                                    <input type="text" style="height:30px" value="{{link.last_name}}" class="form-control" name="last_name"  placeholder="Apellidos">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="color: white;" >Correo Electronico</label>
                                <div class="col-sm-6">
                                    <input type="email" style="height:30px" value="{{link.email}}" class="form-control" name="email" placeholder="email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" style="color: white;" >Contraseña</label>
                                <div class="col-sm-6">
                                    <input type="password" style="height:30px" value="{{link.password}}" class="form-control" name="password" placeholder="Contraseña">
                                </div>
                            </div>
                            <br>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-4" style="left: 250px;" >
                                    <button class="btn btn-block btn-success col-md-2" style="font-size:17px" name="send" id="" placeholder="Enviar">Guardar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col md-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>